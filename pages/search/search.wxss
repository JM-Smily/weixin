/* 2、最新菜品 */
.newest{ 
  width:100%;
  display: flex;
  justify-content: space-around; 
  flex-wrap: wrap;
  background-color: rgba(255, 160, 122,.2);    
}
.newest .title{ 
  display:flex; 
  width:100%; 
  justify-content: center; 
  padding: 10px 0 0 0;
  font-family: '隶书';
  font-size:1.3em;
  color:goldenrod;
  letter-spacing: 8px;
}
.newest .imgbox{ 
  width: 40%;
  height:350rpx; 
  margin-top: 10px;
  padding: 0 8px 10px 8px; 
  display: flex; 
  align-items: center; 
  position: relative; 
  /* border: .5mm solid whitesmoke;  */
  background-color: whitesmoke;
}
 .imgbox .nav{    
   width: 100%;
 } 
 .nav .img{
   display: flex;
   align-self:flex-start;
   width: 100%;
 }
.nav .text{
  position: absolute;
  bottom: 5px; 
  z-index: 1; 
  font-size: .6em;  
}