/**index.wxss**/

/* ------主体内容样式------ */
/* 1、轮播样式 */
swiper{
  height: 400rpx;
}
.slide-image{
  width: 375px;
  height: 100%;  
  display: flex;
  justify-content: center;
}
/* 2、最新菜品 */
.newest{ 
  width:100%;
  display: flex;
  justify-content: space-around; 
  flex-wrap: wrap;
  background-color: rgba(255, 160, 122,.2);   
}
.newest .title{ 
  display:flex; 
  width:100%; 
  justify-content: center; 
  padding: 10px 0 0 0;
  font-family: '隶书';
  font-size:1.3em;
  color:goldenrod;
  letter-spacing: 8px;
}
.newest .imgbox{ 
  width: 43%;
  height:350rpx; 
  margin-top: 10px;
  padding: 0 8px 10px 8px; 
  display: flex; 
  align-items: center; 
  position: relative;
  /* border: .3mm solid whitesmoke;   */
  background-color:whitesmoke; 
}
 .imgbox .nav{    
   width: 100%;
   padding:10px 3px;
 } 
 .nav .img{
   display: flex;
   align-self:center;
   width: 100%;
 }
.nav .text{
  position: absolute;
  bottom: 3px; 
  z-index: 1; 
  font-size: .6em;  
}